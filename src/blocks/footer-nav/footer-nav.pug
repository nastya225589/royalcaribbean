mixin footer-nav(selected)
  -
    var menu = {
      'Маршртуты': '/index.pug',
      'Жизнь на борту': '/contact',
      'Наши лайнеры': '/contact'
    };

  -
    var menu2 = {
      'Блог': '/blog',
      'Контакты': '/contact'
    };

  nav.main-nav
    ul.main-nav__list.main-nav__list--left
      each val, key in menu
        li(class= selected.toLowerCase() === key.toLowerCase() ? 'main-nav__item  main-nav__item--active' : 'main-nav__item')
          a(href=val, title=key)= key
    ul.main-nav__list
      each val, key in menu2
        li(class= selected.toLowerCase() === key.toLowerCase() ? 'main-nav__item  main-nav__item--active' : 'main-nav__item')
          a(href=val, title=key)= key
